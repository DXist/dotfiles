[user]
	name = Rinat Shigapov
	email = rinatshigapov@gmail.com
	signingkey = 0xC600E8FB
[core]
	excludesfile = ~/.gitignore
[format]
	pretty = "%Cred%h%Creset %ad [%an <%ae>]	%Cgreen%s%d%Creset"
[log]
	date = short

[diff "plist"]
	textconv = plutil -convert xml1 -o -

[alias]
	a = add
	b = branch
	brd = "!f() { git branch -d \"$@\" && git push origin --delete \"$@\"; }; f"
	c = checkout
	cm = commit
	cma = commit -a
	p = pull
	d = diff
	# show only modified changes
	dm = diff --diff-filter=M
	# check for unapplied hotfixes
	dcheck = diff HEAD^2...HEAD^1
	l = log --graph
	lst = ls-tree -r --name-only
	m = merge
	s = status
	r = rebase
	rc = rebase --continue
	ctags = !test -x .git/hooks/ctags && .git/hooks/ctags
	switchorigin = !git remote add upstream $(git config --get remote.origin.url) && git fetch upstream && git checkout master && git branch set-upstream-to upstream/master && git remote -v rm origin && git remote -v add origin

[svn]
	pushmergeinfo = 1
	rmdir = 1
[color]
	ui = true
[web]
	browser = chromium-browser
[http]
	postBuffer = 64M
[credential]
	helper = cache --timeout=30000
	branch = true
[push]
	default = current
[init]
	templatedir = ~/.git_template
[include]
	path = .gitconfig.local
